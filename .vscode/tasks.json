      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "run:hello-world"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "Run Renderer",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "run:renderer"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "Run Same Game",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "run:same-game"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "type": "deno",
      "command": "test",
      "problemMatcher": [
        "$deno-test"
      ],
      "group": "test",
      "label": "Run Tests"
    }
  ]
}
