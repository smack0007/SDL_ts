{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "CodeGen",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["codegen"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "CodeGen Scraper",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["codegen-scraper"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Doom Fire",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:doom-fire"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Hello World",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:hello-world"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Hello World Async",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:hello-world-async"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Play Wav",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:play-wav"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Renderer",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:renderer"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Same Game",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:same-game"],
      "options": {
        "env": {
          "GDK_BACKEND": "wayland"
        },
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Version",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run:version"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "type": "deno",
      "command": "task",
      "args": ["test"],
      "problemMatcher": ["$deno-test"],
      "group": "test",
      "label": "Run Tests"
    }
  ]
}
