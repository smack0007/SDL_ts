{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "CodeGen",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "codegen"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "CodeGen Scraper",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "codegen-scraper"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "Run Doom Fire",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": [
        "run:doom-fire"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
