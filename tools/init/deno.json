{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["explicit-function-return-type"]
    }
  },
  "importMap": "imports.deno.json",
  "tasks": {
    "start": "deno run --unstable-ffi --allow-env --allow-ffi ./main.ts"
  }
}
